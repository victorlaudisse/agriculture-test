generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())
  fields        Field[]

  @@map("users")
}

model Field {
  id         String   @id @default(uuid())
  name       String
  crop       String
  area_ha    Decimal  @db.Decimal(10, 2)
  latitude   Decimal  @db.Decimal(9, 6)
  longitude  Decimal  @db.Decimal(9, 6)
  created_at DateTime @default(now())

  user_id    String
  user       User       @relation(fields: [user_id], references: [id], onDelete: Restrict)
  activities Activity[]

  @@index([user_id])
  @@map("fields")
}

model Activity {
  id         String       @id @default(uuid())
  type       ActivityType
  date       DateTime
  notes      String?
  created_at DateTime     @default(now())

  field_id String
  field    Field  @relation(fields: [field_id], references: [id], onDelete: Cascade)

  @@index([field_id])
  @@map("activities")
}

enum ActivityType {
  PLANTIO
  ADUBACAO
  COLHEITA
  OUTRO
}
